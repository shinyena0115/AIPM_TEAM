{
    // 1. 저장 시 자동 포맷팅 활성화
    // 코드를 저장할 때마다 자동으로 서식이 지정되어 스타일 일관성을 보장합니다.
    "editor.formatOnSave": true,

    // 2. 기본 포맷터 설정
    // 여러 포맷터 확장 기능이 설치된 경우, 사용할 기본 포맷터를 지정합니다. 
    // 예시: Prettier 확장 기능을 사용하는 경우
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // 3. 탭 및 들여쓰기 설정
    // 일반적인 코드 스타일 규칙 (대부분의 웹 프로젝트에서 2칸 공백을 선호)
    "editor.tabSize": 2, // 탭 크기를 2칸으로 설정
    "editor.insertSpaces": true, // 탭 대신 공백 사용

    // 4. 특정 언어별 설정 (선택 사항)
    // HTML 파일에서만 다른 포맷터를 사용하거나 다른 스타일을 적용할 수 있습니다.
    "[html]": {
        "editor.tabSize": 4, // HTML 파일에서만 탭 크기를 4칸으로 설정
        "editor.defaultFormatter": "vscode.html-language-features" // 내장 HTML 포맷터 사용
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },

    // 5. 파일 끝에 빈 줄 추가
    // 파일의 끝에 항상 빈 줄을 추가하도록 설정하여 일관성을 유지합니다.
    "files.insertFinalNewline": true,

    // 6. 최대 줄 길이 제한 (선택 사항 - ESLint와 함께 사용 권장)
    // 한 줄의 최대 문자 수를 제한하여 가독성을 높입니다.
    "editor.rulers": [80, 120],

    // 7. 검색에서 특정 파일/폴더 무시
    // 불필요한 파일이 검색 결과에 나타나지 않도록 합니다.
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.vscode": true
    },
    
    // 8. 시각적인 공백 문자 표시 (선택 사항)
    // 공백, 탭, 줄 바꿈 문자를 시각적으로 표시하여 숨겨진 서식 오류를 쉽게 찾을 수 있습니다.
    "editor.renderWhitespace": "all",
    
    // 9. 특정 언어의 자동 완성 및 스니펫 순서 제어 (선택 사항)
    "editor.snippetSuggestions": "top" // 스니펫을 자동 완성 목록 상단에 표시
}